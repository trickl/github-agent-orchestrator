# GitHub Agent Orchestrator (Phase 1/1A)
# Copy this file to .env and fill in values.

# GitHub authentication
ORCHESTRATOR_GITHUB_TOKEN=ghp_your_token_here
GITHUB_BASE_URL=https://api.github.com

# Logging
LOG_LEVEL=INFO

# Local persistence
AGENT_STATE_PATH=agent_state

# REST server (optional)
# The server needs a default repo for PR monitoring because Phase 1 state does not
# yet store per-issue repository.
ORCHESTRATOR_DEFAULT_REPO=owner/repo
ORCHESTRATOR_HOST=127.0.0.1
ORCHESTRATOR_PORT=8000

# Server-side auto progression (optional)
# When enabled, the server will periodically attempt deterministic loop actions:
# - Step A: ensure a gap analysis issue exists and is assigned (if none exists)
# - Step B: promote next unpromoted development queue file
# - Step D: merge next ready development PR
# - Step E (legacy): promote next unpromoted capability queue file
# - Step G: merge next ready capability PR
ORCHESTRATOR_AUTO_PROMOTE_ENABLED=false
ORCHESTRATOR_AUTO_PROMOTE_INTERVAL_SECONDS=30
